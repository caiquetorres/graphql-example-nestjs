{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@graphql-example/google-auth": ["libs/google-auth/src"],
      "@graphql-example/google-auth/*": ["libs/google-auth/src/*"]
    }
  },
  "include": ["src/**/*", "libs/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
